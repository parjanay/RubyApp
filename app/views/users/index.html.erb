<center>
<h1> Alpha Bloggers </h1>

<table border="2">
    <thead>
        <tr>
            <th>User</th>
            <th>Title</th>
            <th>Description</th>
            <th>Created At </th>
            </th> Updated At </th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody> 
        <% @users.each do |user| %>
        <tr>
            <td> <%= link_to user.name, user%> </td>
            <td> <%=link_to gravatar_for(user,size:100), user%> </td>
            <td> <%= pluralize(user.articles.count, "article")%> </td>
            <td> Joined at <%= user.created_at%></td>
            <td> <%= link_to 'Show Profile', user %> </td>
            <td> <%= link_to 'Edit Profile', edit_user_path(user) %> </td>
        </tr>
        <%end%>
    </tbody>
</table>


<%=link_to 'Home Page', root_path %> |
<%=link_to 'Signup Today!', signup_path %> |
<%=link_to 'Article Listing', articles_path %> |
<%=link_to 'LOGIN NOW', login_path %> |
<% if logged_in? %>
    <%=link_to 'LOGOUT NOW', root_path, method: :delete %> | 
<%else%>
     <%=link_to 'LOGIN NOW', login_path%> |
<%end%>
</center>