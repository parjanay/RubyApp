
<center> 
    <h1> <%= @user.name %>'s Profile Page </h1>
    <%=gravatar_for @user, size: 200 %> <br/>
    <%=link_to "Edit your profile", edit_user_path(@user)%> <br/>
    <h3>Articles:<h3>
    <%= render 'articles/article' %>

    <%=link_to 'Articles Listing', articles_path %> |
    <%=link_to 'Create new Article', new_article_path%> |
    <%=link_to 'Home Page', root_path %>|
    <% if logged_in? %>
        <%=link_to 'LOGOUT NOW', root_path, method: :delete %> | 
    <%else%>
        <%=link_to 'LOGIN NOW', login_path%> |
    <%end%>
</center>